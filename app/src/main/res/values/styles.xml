<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Components-->

    <!--Bottom Sheets-->
    <style name="ThemeOverlay.MeetupAttendee.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">
            @style/Animation.MeetupAttendee.BottomSheet.Modal
        </item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/Widget.MeetupAttendee.BottomSheet.Modal</item>
        <item name="android:navigationBarColor">?colorSurface</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">
            @android:color/transparent
        </item>
    </style>

    <style name="Widget.MeetupAttendee.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">?shapeAppearanceLargeComponent</item>
    </style>

    <!--Navigation Drawer-->
    <style name="Widget.MeetupAttendee.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemTextAppearance">?textAppearanceBody2</item>
    </style>

    <!--Button-->
    <style name="Widget.MeetupAttendee.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:padding">@dimen/button_padding</item>
    </style>

    <!--EditText-->
    <style name="Widget.MeetupAttendee.EditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textAppearance">@style/TextAppearance.MeetupAttendee.EditText
        </item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!--TabLayout-->
    <style name="Widget.MeetupAttendee.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabBackground">@drawable/tab_indicator</item>
        <item name="tabIndicatorHeight">@dimen/tab_indicator_height</item>
        <item name="tabSelectedTextColor">?colorSecondary</item>
        <item name="tabTextColor">?tabLayoutUnselectedTextColor</item>
        <item name="tabTextAppearance">@style/TextAppearance.MeetupAttendee.TabLayout</item>
    </style>

</resources>
